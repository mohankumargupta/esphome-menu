{
  "version": "2.0.0",
  "options": {
    "env": {
      "ESPHOME_DATA_DIR": "mohan/build",
    }
  },
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "esphome",
        "compile",
        "mohan/example.yaml"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Wokwi with Debugger",
      "command": "${command:wokwi-vscode.startAndWait}"
    }
  ]
}                  
    